<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/prompt_login_wms"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_24"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@+id/login_account_set_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login_account_set_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/background_edit_text"
        android:gravity="center_vertical"
        android:hint="@string/text_account_set"
        android:paddingEnd="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/login_account_text_view" />

    <com.teeny.wms.widget.FunctionEditText
        android:id="@+id/login_account_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/background_edit_text"
        android:digits="@string/digits_account"
        android:drawableEnd="@drawable/icon_vector_cancel"
        android:drawableRight="@drawable/icon_vector_cancel"
        android:ellipsize="end"
        android:hint="@string/text_account"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:maxLength="16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/login_password_text_view" />

    <com.teeny.wms.widget.FunctionEditText
        android:id="@+id/login_password_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/background_edit_text"
        android:drawableEnd="@drawable/icon_vector_cancel"
        android:drawableRight="@drawable/icon_vector_cancel"
        android:ellipsize="end"
        android:hint="@string/text_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/login_button" />

    <Button
        android:id="@+id/login_button"
        style="@style/ButtonStyle"
        android:layout_marginBottom="@dimen/dp_32"
        android:text="@string/text_login"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
