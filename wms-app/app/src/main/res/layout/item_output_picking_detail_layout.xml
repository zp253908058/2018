<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selectable_item_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.teeny.wms.widget.KeyValueTextView
        android:id="@+id/output_picking_detail_goods_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        app:key="@string/text_goods_name"
        app:keySize="@dimen/sp_14"
        app:separatorSize="@dimen/sp_14"
        app:valueSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal">

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_specification"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_specification"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_unit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_unit"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal">

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_location"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_goods_allocation"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_order_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_order_count"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal">

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_lot"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_lot_number"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/output_picking_detail_validate_date"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_validity"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />
    </LinearLayout>



    <com.teeny.wms.widget.KeyValueTextView
        android:id="@+id/output_picking_detail_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        app:key="@string/text_manufacturer"
        app:keySize="@dimen/sp_14"
        app:separatorSize="@dimen/sp_14"
        app:valueSize="@dimen/sp_14" />
</LinearLayout>