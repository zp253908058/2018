<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_selectable_item_white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.teeny.wms.widget.KeyValueTextView
        android:id="@+id/shop_goods_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        app:key="@string/text_goods_name"
        app:keySize="@dimen/sp_14"
        app:separatorSize="@dimen/sp_14"
        app:valueSize="@dimen/sp_14" />

    <com.teeny.wms.widget.KeyValueTextView
        android:id="@+id/shop_goods_allocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        app:key="@string/text_goods_allocation"
        app:keySize="@dimen/sp_14"
        app:separatorSize="@dimen/sp_14"
        app:valueSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal">

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/shop_goods_inventory_amount"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_inventory_amount"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueColor="@color/colorPrimaryDark"
            app:valueSize="@dimen/sp_14" />

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/shop_goods_paper_amount"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_paper_amount"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueColor="@color/colorPrimaryDark"
            app:valueSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal">

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/shop_goods_unit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_unit"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />

        <com.teeny.wms.widget.KeyValueTextView
            android:id="@+id/shop_goods_specification"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:key="@string/text_specification"
            app:keySize="@dimen/sp_14"
            app:separatorSize="@dimen/sp_14"
            app:valueSize="@dimen/sp_14" />
    </LinearLayout>

    <com.teeny.wms.widget.KeyValueTextView
        android:id="@+id/shop_goods_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        app:key="@string/text_manufacturer"
        app:keySize="@dimen/sp_14"
        app:separatorSize="@dimen/sp_14"
        app:valueSize="@dimen/sp_14" />

</LinearLayout>